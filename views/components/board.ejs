<div>
    <div id="board"></div>
    <div id="pagination"></div>
</div>

<style>
    .t_board {
        width: 100%;
        border: 1px solid #444444;
        border-collapse: collapse;
    }

    .t_board th, td {
        border: 1px solid #444444;
        padding: 5px 10px;
    }

    .pagination {
        padding: 10px;
    }

    .pagination a {
        padding: 0px 5px;
        text-decoration: none;
    }

    .center {
        text-align: center;
        margin: auto;
        width: 50%;
    }
</style>
<script>
    const data = <%- JSON.stringify(data) %>;
    console.log(data);
    document.addEventListener('DOMContentLoaded', function (){
      document.querySelector('#board').appendChild(createBoard(data.list));
      document.querySelector('#pagination').appendChild(createPagination(data));
    });

    function createBoard(list) {

      const table = document.createElement('table');
      table.className = 't_board';

      // Table Head
      const thead = document.createElement('thead');


      // Table Body
      const tbody = document.createElement('tbody');

      for( let i = 0, l = list.length; i < l; i += 1 ) {
        tbody.appendChild(elItem(list[i]));
      }

      table.appendChild(thead);
      table.appendChild(tbody);

      return table;
    }

    function elItem(item) {
      const keys = Object.keys(item);

      const tr = document.createElement('tr');

      for( let i = 0, l = keys.length; i < l; i += 1 ) {
        const td = document.createElement('td');
        td.innerText = item[keys[i]];
        tr.appendChild(td);
      }

      return tr;
    }

    function createPagination(data) {
      const { currentPageNum, lastPageNum, limit, total_count } = data;

      const nav = document.createElement('nav');
      const div = document.createElement('div');
      div.className = 'pagination center';

      const pre = document.createElement('a');
      pre.innerText = '<'
      div.appendChild(pre)

      for (let i = 1; i < lastPageNum + 1; i += 1) {
        const a = document.createElement('a');
        a.innerText = `${i}`;
        a.className = 'item';
        a.href = '/';

        if (i == currentPageNum) {
          a.classList.add('active')
        }
        div.appendChild(a);
      }

      const next = document.createElement('a');
      next.innerText = '>'
      div.appendChild(next)

      nav.appendChild(div);

      return nav
    }
</script>
