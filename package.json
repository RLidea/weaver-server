{
  "name": "weaver-server",
  "version": "0.3.1",
  "private": true,
  "description": "api server",
  "bugs": "https://github.com/RLidea/weaver-server/issues",
  "license": "ISC",
  "contributors": [
    {
      "name": "RLidea",
      "url": "https://github.com/RLidea/"
    }
  ],
  "scripts": {
    "start": "pm2 start ./bin/www --name 'weaver' --watch",
    "stop": "pm2 delete weaver",
    "log": "pm2 log",
    "dev": "./node_modules/.bin/nodemon ./bin/www",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha ./tests --recursive -w",
    "migrate": "./node_modules/.bin/sequelize db:migrate",
    "seed": "./node_modules/.bin/sequelize db:seed:all",
    "db:undo": "npm-run-all --parallel db:undo:**",
    "db:undo:migrate": "./node_modules/.bin/sequelize db:migrate:undo:all",
    "db:undo:seed": "./node_modules/.bin/sequelize db:seed:undo:all",
    "set": "./bin/install.sh",
    "commit": "./node_modules/.bin/gitmoji -c",
    "lint": "./node_modules/.bin/eslint --ignore-path .eslintignore . --fix"
  },
  "_moduleAliases": {
    "@root": ".",
    "@system": "./src/system",
    "@middleware": "./src/middleware",
    "@models": "./src/app/models",
    "@services": "./src/app/services",
    "@controllers": "./src/app/controllers",
    "@utils": "./src/app/utils",
    "@queries": "./src/app/queries"
  },
  "nodemonConfig": {
    "ext": "js, json",
    "ignore": [
      "src/public/*",
      "var/logs/*/*",
      "var/session/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true,
      "browser": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^next$|^res|Sequelize"
        }
      ],
      "import/no-unresolved": "off",
      "arrow-body-style": "off",
      "object-curly-newline": "off",
      "max-len": "warn",
      "no-restricted-syntax": "warn",
      "no-use-before-define": "off",
      "camelcase": "warn",
      "space-before-function-paren": "off",
      "consistent-return": "warn",
      "arrow-parens": "off"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "ejs-locals": "^1.0.2",
    "express": "~4.16.1",
    "helmet": "^4.3.1",
    "http-errors": "^1.8.0",
    "jsdom": "^15.2.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "mysql2": "^2.2.5",
    "nodemailer": "^6.4.17",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-kakao": "^1.0.1",
    "passport-local": "^1.0.0",
    "passport-naver": "^1.0.6",
    "sendmail": "^1.6.1",
    "sequelize": "^5.22.3",
    "swagger-jsdoc": "6.0.0",
    "swagger-ui-express": "^4.1.6",
    "validate": "^5.1.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "gitmoji-cli": "^3.2.18",
    "husky": "^4.2.3",
    "lint-staged": "^9.5.0",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.2.0"
  }
}
