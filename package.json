{
  "name": "weaver-server",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "start": "npm-run-all --parallel start:**",
    "start:server": "./node_modules/.bin/nodemon ./bin/www",
    "dev": "./node_modules/.bin/nodemon ./bin/www",
    "precommit": "lint-staged",
    "test:server": "./node_modules/.bin/mocha ./tests --recursive -w",
    "db:undo": "npm-run-all --parallel undo:**",
    "migrate": "./node_modules/.bin/sequelize db:migrate",
    "seed": "./node_modules/.bin/sequelize db:seed:all",
    "undo:migrate": "./node_modules/.bin/sequelize db:migrate:undo:all",
    "undo:seed": "./node_modules/.bin/sequelize db:seed:undo:all"
  },
  "_moduleAliases": {
    "@root": ".",
    "@controllers": "./app/controllers",
    "@middleware": "./app/middleware",
    "@models": "./app/models",
    "@services": "./app/services",
    "@utils": "./app/utils"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/eslint/bin/eslint.js --fix 'app/controllers/**/*.js'",
      "./node_modules/eslint/bin/eslint.js --fix 'app/middleware/**/*.js'",
      "./node_modules/eslint/bin/eslint.js --fix 'app/utils/**/*.js'",
      "./node_modules/eslint/bin/eslint.js --fix 'app/services/**/*.js'",
      "git add"
    ]
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^next$|^res"
        }
      ],
      "import/no-unresolved": "off",
      "arrow-body-style": "off",
      "object-curly-newline": "off",
      "max-len": "warn",
      "no-restricted-syntax": "warn",
      "no-use-before-define": "off",
      "camelcase": "warn",
      "space-before-function-paren": "off",
      "consistent-return": "warn",
      "arrow-parens": "off"
    }
  },
  "dependencies": {
    "acorn": ">=7.1.1",
    "axios": "^0.19.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "ejs-locals": "^1.0.2",
    "express": "~4.16.1",
    "http-errors": "^1.7.3",
    "i18next": "^19.1.0",
    "i18next-express-middleware": "^1.9.1",
    "i18next-node-fs-backend": "^2.1.3",
    "jsdom": "^15.2.1",
    "jsonwebtoken": "^8.5.1",
    "minimist": ">=0.2.1",
    "module-alias": "^2.2.2",
    "morgan": "~1.9.1",
    "mysql2": "^2.0.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "sequelize": "^5.21.2",
    "validate": "^5.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "sequelize-cli": "^5.5.1",
    "supertest": "^4.0.2"
  }
}
